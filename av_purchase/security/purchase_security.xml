        <!-- Record Rule for CP users -->
        <record id="purchase_order_cp_rule" model="ir.rule">
            <field name="name">Purchase Order CP Rule</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="groups" eval="[(4, ref('av_purchase.group_purchase_cp'))]"/>
            <field name="domain_force">[('create_uid', '=', user.id), '|', ('state', '=', 'draft'), ('state', '=', 'sent')]</field>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>
        
