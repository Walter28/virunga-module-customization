<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_cancel_reason_form" model="ir.ui.view">
        <field name="name">purchase.cancel.reason.form</field>
        <field name="model">purchase.cancel.reason</field>
        <field name="arch" type="xml">
            <form string="Cancel Purchase Order">
                <group>
                    <field name="reason" placeholder="Please specify the reason for cancellation..."/>
                    <field name="purchase_id" invisible="1"/>
                </group>
                <footer>
                    <button name="action_confirm_cancel" string="Confirm Cancellation" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_cancel_reason" model="ir.actions.act_window">
        <field name="name">Cancel Purchase Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.cancel.reason</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
